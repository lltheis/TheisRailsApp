<div id="background" class="container-fluid">
	<div class="project-modal-title text-center">Contact Laura Theis
	</div>
</div>
	<div class="col-sm-10" style="padding-top: 15px;">
		<%= flash[:notice] %>

		<%= form_tag("/static_pages/thank_you") do %>
		<div class="row">
		  <div class="col-md-4">
		    <div class="form-group">
		      <%= label_tag :name, "Name *" %>
		      <%= text_field_tag :name, nil, class: "form-control", required: "true", placeholder: "Enter Name" %>
		    </div>      
		    <div class="form-group">
		      <%= label_tag :email, "Email Address *" %>
		      <%= text_field_tag :email, nil, class: "form-control", required: "true", placeholder: "Enter Email" %>
		    </div>
		    <div class="form-group">
		      <%= label_tag :message, "Message *" %>
		      <%= text_area_tag :message, nil, class: "form-control", required: "true", placeholder: "Enter Message" %>
		    </div>      
		  </div>
		</div>
		<%= submit_tag "Send", class: "btn" %>   
		<% end %>
	</div>
</div>