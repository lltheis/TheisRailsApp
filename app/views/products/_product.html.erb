<div class="col-xs-12 col-sm-4">
	<div class="product-title"><%= product.name %></div>
	<% logger.debug "Product: #{product.name}"%>
		<%= image_tag(product.image_url, class: "img-responsive featured-product") %>
	<div class="product-desc"><%= product.description %></div>
		<span class="product-price">Retail Price = $ <%= product.price %></span>
			<%= link_to product, class:"btn btn-default", role:"button" do %>
      	Tell me more!
      <% end %> 

	<hr>
	
</div><!-- /col -->
