<% if signed_in? %>
  
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
  <h3>Add a review:</h3>
    <p>
      <%= f.label :body, "Your comments" %><br>
      <%= f.text_area :body, class: "form-control" %>
    </p>
    <p>
    	<div class="rating">
      </div>
    </p>  
    <p>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </p>
  <% end %>
<% end %>