
<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tbody>
      <tr>
        <th class="form-table-header"><%= f.label :name %></th>
        <td><%= f.text_field :name, class: "form-control form-field" %></td>
      </tr>
      <tr>
        <th class="form-table-header"><%= f.label :description %></th>
        <td><%= f.text_area :description, class: "form-control form-field" %></td>
      </tr>
      <tr>
        <th class="form-table-header"><%= f.label :image_url %></th>
        <td><%= f.text_field :image_url, class: "form-control form-field" %></td>
      </tr>
      <tr>
        <th class="form-table-header"><%= f.label :colour %></th>
        <td><%= f.text_field :colour, class: "form-control form-field" %></td>
      </tr>
      <tr>
        <th class="form-table-header"><%= f.label :price %></th>
        <td><%= f.text_field :price, class: "form-control form-field" %></td>
      </tr>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

